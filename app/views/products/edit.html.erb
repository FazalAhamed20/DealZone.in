<%= form_with model: @product do |f| %>
  <div>
    <%= f.label :name, "Product Name" %>
    <br>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :description, "Product Description" %>
    <br>
    <%= f.text_area :description %>
  </div>

  <div>
    <%= f.label :amount, "Product Price" %>
    <br>
    <%= f.text_field :amount %>
  </div>

  <div>
    <%= f.submit "Update Product" %>
  </div>
<% end %>
